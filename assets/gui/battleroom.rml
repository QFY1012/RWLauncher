		        <img id="mapImage" class="mapImage" _src="" />
		      </div>
		      
		      <div class="forHostOnly mainButtons gameOptionsDiv" style="display:none;">
	           <button onclick="createAndShowPopup('battleroom_gameoptions.rml', null, 'Game Options'); mp.gameOptionsGet();">Game Options</button>
		      </div>
		      
		      <div class="forHostOnly">
		      
		        <div class="optionsDiv hide">
		          
		          <div class="selectDiv bigger mapsSelectorWrap">
              <label>Map:</label>
              <select id="mapsSelector">
              </select>
              </div>
		          
		        </div>
		      
		      </div>
		      
		      <div class="playersDiv" id="playersDiv">
		        <div class="center">
		        <h3 class="hide">Players</h3>
		        </div>
		        <div class="tableList">
		          <div class="tableRow tableRowHeader">
		            <div class="ctext cell rName">${i:menus.battleroom.heading.name}</div>
		            <div class="ctext cell rSpawnPoint">${i:menus.battleroom.heading.spawnPoint}</div>
		            <div class="ctext cell rTeam">${i:menus.battleroom.heading.team}</div>
		            <div class="ctext cell rPing">${i:menus.battleroom.heading.ping}</div>
		          </div>
		          
		          <div id="tableScrollDiv">
		            <div id="tableListData">
		              <div class="tableRow tableRowData">
		                <div class="cell rName">1</div>
	                  <div class="cell rSpawnPoint">2</div>
	                  <div class="cell rTeam">3</div>
	                  <div class="cell rPing">4</div>
		              </div>
		            </div>
		          </div>
		        </div>
		        <div id="tableRowTemplateHolder" style="display:none;">
	            <div class="rowTemplate template">
	              <div class="tableRow tableRowData"></div>
	            </div>
	            
	            <div class="cellTemplate template">
	              <div class="ctext cell"></div>
	            </div>
		        </div>
		        
		        
		      </div>
		      
		      <div class="mainButtons center forHostOnly">
	          <button onclick="mp.addAI()">+New AI</button>
	        </div>
	         
	        
	        
	        <div class="formSection_na panelSection_na mainButtons center">
	          <button onclick="mp.multiplayerBackPrompt()">Back</button>
	          
		        <span class="forHostOnly" style="display:none;">
	              <button onclick="mp.multiplayerStart()">Start</button>
	          </span>
	          
	        </div>
	      
	      </div>
		
