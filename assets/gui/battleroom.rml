      </div>
      
      <div id="chatLogRowTemplate">
      </div>
      
      
      <div class="chatSendBox">
        <input id="chatMessage" type="text" name="chatMessage" value="" onenter="sendChatMessage(getValueById('chatMessage')); setValueById('chatMessage','')" />
        <!--<button onclick="sendChatMessage(getValueById('chatMessage')); setValueById('chatMessage','')">Send</button>-->
      </div>
    </div>
		
